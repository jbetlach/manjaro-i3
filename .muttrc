# LOCAL

# IMAP

set mbox_type = Maildir
set folder = ~/.mail/betlach
set mbox_type = maildir
set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent
set header_cache = "~/.cache/mutt/headers" 
set message_cachedir = "~/.cache/mutt/bodies"

# SMTP

set realname = 'Jan Betlach'
set sendmail = "/usr/bin/msmtp"
set folder = ~/.mail/betlach
set mbox = +mbox
set spoolfile = +INBOX
set record = +Sent
set postponed = +Drafts
set mbox_type = Maildir
mailboxes +inbox 

# HEADERS
set edit_headers = yes
unmy_hdr *
unset use_from
unset use_domain
unset user_agent
my_hdr X-Info: Open BSD.

# SIGNATURE
set signature="~/.signature"
